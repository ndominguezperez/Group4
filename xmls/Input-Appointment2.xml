<!DOCTYPE appointment [
	<!ELEMENT appointment (date, time, speciality,doctor,patient)>
	<!ATTLIST appointment type CDATA #REQUIRED>
	<!ELEMENT date (#PCDATA)>
	<!ELEMENT time (#PCDATA)>
	<!ELEMENT speciality (#PCDATA)>
	<!ELEMENT doctor EMPTY>
	<!ELEMENT patient EMPTY>
	<!ATTLIST doctor id CDATA #REQUIRED name CDATA #IMPLIED >
	<!ATTLIST patient id CDATA #REQUIRED name CDATA #IMPLIED surname CDATA #IMPLIED>	
]>
